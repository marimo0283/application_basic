<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<div class="field">
    <label>Title</label>
    <span><%= f.text_field :title %></span>
  </div>

  <div class="fiels">
    <label>Body</label>
    <span><%= f.text_area :body %></span>
  </div>

  <div class="botton">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>


<%= link_to "Show", book_path(book.id) %>
